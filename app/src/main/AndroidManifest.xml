<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KalmmBudgeting2"
        tools:targetApi="31">

        <!-- Profile screen -->
        <activity
            android:name=".ProfileActivity"
            android:exported="false" />

        <!-- Create New Goal -->
        <activity
            android:name=".CreateNewGoalActivity"
            android:exported="false" />

        <!-- Home dashboard -->
        <activity
            android:name=".HomeActivity"
            android:exported="false" />

        <!-- Annual Overview chart -->
        <activity
            android:name=".AnnualOverviewActivity"
            android:exported="false" />

        <!-- Reports: Income -->
        <activity
            android:name=".ReportsIncomeActivity"
            android:exported="false" />

        <!-- Reports: Expense -->
        <activity
            android:name=".ReportsExpenseActivity"
            android:exported="false" />

        <!-- Log a new entry -->
        <activity
            android:name=".LogNewEntryActivity"
            android:exported="false" />

        <!-- Full Achievements list -->
        <activity
            android:name=".AchievementsDetailActivity"
            android:exported="false" />

        <!-- Launcher / Main entrypoint -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
